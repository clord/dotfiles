
[user]
	name = Christopher Lord
	email = christopherlord@gmail.com

[color]
	branch = auto
	diff = auto
	interactive = auto
   pager = true
	status = auto
	ui = auto

[core]
	editor = vim
	whitespace = trailing-space,space-before-tab,cr-at-eol

[apply]
	whitespace = fix

[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%Cgreen%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	unstage = reset HEAD --
	staged = diff --cached
	last = log -1 HEAD
	graph = log --graph --oneline --decorate
	s = status -s
   p = push
	d = diff -w --patience
	c = commit
	co = checkout
	cm = commit -m
	ca = commit -a
	amend = commit --amend
	caa = commit -a --amend -C HEAD
	cma = commit -a -m
	a = add
	ai = add --interactive
	r = reset

[diff]
	mnemonicprefix = true
	tool = Kaleidoscope
	renamed = copy

[advice]
	statusHints = false
[branch]
	autosetupmerge = true
[push]
	default = tracking
[merge]
	stat = true
   conflictstyle = diff3
[difftool "Kaleidoscope"]
	cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
