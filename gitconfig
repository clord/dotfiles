
[user]
	name = Christopher Lord
	email = christopherlord@gmail.com

[color]
	branch = auto
	diff = auto
	interactive = auto
   pager = true
	status = auto
	ui = auto

[core]
	editor = vim
	whitespace = trailing-space,space-before-tab,cr-at-eol

[apply]
	whitespace = fix

[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%Cgreen%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	unstage = reset HEAD --
	staged = diff --cached
	last = log -1 HEAD
	graph = log --graph --oneline --decorate
	s = status -s
   p = push
   d = diff -w --minimal --word-diff=color --patience
	c = commit
	co = checkout
	cm = commit -m
	ca = commit -a
	amend = commit --amend
	caa = commit -a --amend -C HEAD
	cma = commit -a -m
	a = add
	ap = add --patch
	ai = add --interactive
	r = reset
	praise = blame
	unstaged = diff
	both = diff HEAD
	oneline = log --oneline
	undo = reset --hard HEAD^
	tree = log --graph --decorate --pretty=oneline --abbrev-commit --all

[diff]
	mnemonicprefix = true
	tool = Kaleidoscope
	renamed = copy
	algorithm = patience

[advice]
	statusHints = false
[branch]
	autosetupmerge = true
[push]
	default = tracking
[merge]
	stat = true
	conflictstyle = diff3
[difftool "Kaleidoscope"]
	cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[log]
	decorate = short
[pager]
	status = true
	show-branch = true
[format]
	numbered = auto
