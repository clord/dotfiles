[user]
    name = Christopher Lord
    email = christopher@pliosoft.com
    signingkey = 07DAB27421F27573

[color]
   ui = always
[color "branch"]
   current = yellow reverse
   local = yellow
   remote = green
[color "status"]
   added = yellow
   changed = green
   untracked = cyan

[core]
    editor = nvim
    whitespace = trailing-space,space-before-tab,cr-at-eol
	pager = diff-so-fancy | less --tabs=4 -RFX
[pager]
    status = true
    show-branch = true
    diff = /usr/local/bin/diff-so-fancy | less --tabs=1,4 -RFX
    show = /usr/local/bin/diff-so-fancy | less --tabs=1,4 -RFX

[diff]
    algorithm = patience

[apply]
    whitespace = fix


[help]
   autocorrect = 1

# push easily. http://stackoverflow.com/a/23918418/89484
[push]
   default = current

# use separate file for username / github token / etc
[include]
  path = ~/.gitconfig.local


[alias]
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
    unstage = reset HEAD --
    staged = diff --cached
    unstaged = diff
    last = log -1 HEAD
    s = status -s
    d = diff -w --minimal --word-diff=color --color-words --abbrev --patience
    dt = difftool
    c = commit -am
    amend = commit --amend
    a = add
    ap = add --patch
    ai = add --interactive
    praise = blame
    both = diff HEAD
    tree = log --graph --decorate --pretty=oneline --abbrev-commit --all
    add-commit = !git add -A && git commit
    ctags = !.git/hooks/ctags
	quick-stats = ! /usr/local/bin/git-quick-stats
	exec = "!exec "

[advice]
    statusHints = false
[branch]
    autosetupmerge = true
[push]
    default = tracking
[merge]
    stat = true
    conflictstyle = diff3
[log]
    decorate = short
[format]
    numbered = auto
[init]
    templatedir = ~/.git_template
[include]
    path = ~/.gitconfig.reflow
[url "git@github.com:"]
   insteadOf = "gh:"
   insteadOf = "git://github.com"
   pushInsteadOf = "github:"
   pushInsteadOf = "git://github.com/"
    pushInsteadOf = "https://github.com/"
[url "git@gist.github.com:"]
   insteadOf = "gst:"
   pushInsteadOf = "gist:"
   pushInsteadOf = "git://gist.github.com/"
   pushInsteadOf = "https://gist.github.com/"

[fetch]
	prune = true
[rerere]
	enabled = true
