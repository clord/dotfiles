#!/usr/bin/env zsh
IFS=$'\n\t'

# The files that we are going to replace
files=(irbrc ghci vim zsh vimrc gitconfig)

# use the working directory as the place to link into
wdir=`pwd`

# Remove old files, and symlink the new ones into place
for f in $files; do
   echo "-> " $f
   rm -rf ~/.$f
   ln -s $wdir/$f ~/.$f
done

mkdir -p ~/.config/fish
ln -s config.fish ~/.config/fish
ln -s fish_functions/* ~/.config/fish/functions

echo 'Create per-machine storage and configuration:'
mkdir -p ~/tmp/undo
mkdir -p ~/tmp/backup
mkdir -p ~/tmp/swap

touch ~/tmp/user.vim

echo 'Non-destructively create the ~/.local namespace, where user installed stuff will live'
mkdir -p ~/.local{,/`uname -s`}/{{,s}bin,share{,/man},etc,var,lib}

echo <<EOF
#!/bin/sh
echo "Use ag: faster, shorter, better"
echo "   https://github.com/ggreer/the_silver_searcher"
exit 1
EOF > ~/.local/bin/ack
chomod u+x ~/.local/bin/ack 
# Install vundle for vim
rm -rf ~/.vim/bundle/vundle
mkdir -p ~/.vim/bundle
git clone https://github.com/gmarik/vundle.git ~/.vim/bundle/vundle
echo 'in vim, run :BundleInstall'

