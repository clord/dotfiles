#!/usr/bin/env zsh

# The files that we are going to replace
files=(irbrc vim zshrc zshenv zprofile zsh vimrc xmobarrc xmonad gitconfig tmux.conf Xresources)

# use the working directory as the place to link into
wdir=`pwd`

# Update submodules
git submodule init
git submodule update

# Remove old files, and symlink the new ones into place
for f in $files; do
   echo "-> " $f
   rm -rf ~/.$f
   ln -s $wdir/$f ~/.$f
done

# Create a per-machine configuration file.
mkdir -p ~/tmp/undo
mkdir -p ~/tmp/backup
mkdir -p ~/tmp/swap

touch ~/tmp/user.vim

# Non-destructively create the ~/.local namespace, where user installed stuff will live
mkdir -p ~/.local{,/`uname -s`}/{{,s}bin,share{,/man},etc,var,lib}

# install ack
curl http://betterthangrep.com/ack-standalone > ~/.local/bin/ack && chmod 0755 ~/.local/bin/ack

